<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<main class="container">
  
    <h1 class="display-5">Shopping card</h1>
    <%if(success && success.length)
    {%>
      <div class="alert alert-success mb-3" role="alert">
        <p><%= success%></p>
      </div>
    <%}%>
    <%if(error && error.length)
    {%>
      <div class="alert alert-success mb-3" role="alert">
        <p><%= error%></p>
      </div>
    <%}%>
    <div class="row">
        <% for(let product of products){ %>
       <div class="col-lg-4 col-md-6 mb-3 " >
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="<%=product.img%>" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text"><%=product.desc.substring(0,100)%></p>
              <h3 class="card-text">&#x20B9 <%=product.price%></h3>
              <a href="#" class="btn btn-outline-primary btn-small">Buy</a>
              <a href="/products/<%= product._id %>" class="btn btn-outline-success btn-small">Show</a>
              
            </div>
          </div>
       </div>
    <%}%>
    </div>

</main>

<%- include("../partials/footer") %>