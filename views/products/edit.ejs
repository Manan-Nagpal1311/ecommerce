<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<main class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1>Edit Product</h1>
            <form action='/products/<%= product._id%>?_method=PATCH' method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control"  name="name" id="name" placeholder="Product Name" value="<%=product.name%>">
                </div>
                <div class="mb-3">
                    <label for="img" class="form-label">Image URL</label>
                    <input type="text" class="form-control"  name="img" id="img" placeholder="Image Url" value="<%=product.img%>">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <span class="input-group-text from-inline" id="basic-addon1">&#x20B9</span>
                    <input type="text" class="form-control"  name="price" id="price" placeholder="Price Of Product" value="<%=product.price%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" name="desc">Description</label>
                    <textarea id="desc" name="desc" class="form-control" rows="6" value="<%=product.desc%>">
    
                    </textarea>
                </div>
                <button type="submit" class="btn btn-success btn-small">Save</button>
            </form>
           
        </div>
    </div>
</main>

<%- include("../partials/footer")%>
